<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_employee_form" model="ir.ui.view">
      <field name="name">hr.employee.inherit</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='personal_information']" position="after">
          <page string="Asistencias y capacitaciones" attrs="{'invisible':[('job_title', '!=', 'Tecnico')]}">
            <group string="Asistencias del tÃ©cnico">
              <field name="asistencias">
                <tree editable="bottom">
                  <field name="socio_id"/>
                  <field name="fecha"/>
                  <field name="tema"/>
                  <field name="recomendacion"/>
                  <field name="cumplio"/>
                </tree>
              </field>
            </group>
            <group string="Capacitaciones del tecnico">
              <field name="capacitaciones">
                <tree editable="bottom">
                  <field name="socio_id"/>
                  <field name="fecha"/>
                  <field name="tema"/>
                  <field name="financiacion"/>
                </tree>
              </field>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
